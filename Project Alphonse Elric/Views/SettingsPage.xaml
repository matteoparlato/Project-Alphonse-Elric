                        <StackPanel Margin="32,0,0,0">
                            <TextBlock Text="Per abilitare questa funzione è necessario specificare un metodo di autenticazione valido (PIN, impronta digitale o scansione dell'iride) nelle impostazioni di Windows." TextWrapping="Wrap" />
                            <Button
                                Margin="0,8,0,0"
                                Click="Button_Click"
                                Content="Apri le impostazioni di Windows"
                                Style="{StaticResource ButtonRevealStyle}" />
                        </StackPanel>
                    </RelativePanel>
                </StackPanel>
                <!--#endregion-->

                <!--#region Live tile-->
                <StackPanel
                    x:Name="LiveTileStackPanel"
                    Grid.Row="2"
                    Grid.Column="0"
                    Padding="0,28,0,58">
                    <TextBlock
                        Style="{ThemeResource TitleTextBlockStyle}"
                        Text="Live tile"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,8,0,0"
                        Style="{ThemeResource BodyTextBlockStyle}"
                        Text="La live tile ti consente di rimanere costantemente aggiornato riguardo ai tuoi consumi. La verifica viene eseguita automaticamente ogni 15 minuti."
