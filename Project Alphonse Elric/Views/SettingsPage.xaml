<Page
    x:Class="Project_Alphonse_Elric.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Project_Alphonse_Elric.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    IsTextScaleFactorEnabled="False"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid>
            <Grid Margin="16,0,16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--#region Account-->
                <StackPanel
                    x:Name="AccountStackPanel"
                    Grid.Row="0"
                    Grid.Column="0"
                    Padding="0,18,0,0">
                    <TextBlock
                        Style="{ThemeResource TitleTextBlockStyle}"
                        Text="Account iliad"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,8,0,0"
                        Style="{ThemeResource BodyTextBlockStyle}"
                        Text="Vuoi accedere all'account iliad associato ad un'altra SIM?"
                        TextWrapping="Wrap" />
                    <HyperlinkButton Click="HyperlinkButton_Click_2" Content="Cambia utente" />
                </StackPanel>
                <!--#endregion-->

                <!--#region Support and App information-->
                <StackPanel
                    x:Name="SupportStackPanel"
                    Grid.Row="0"
                    Grid.RowSpan="4"
                    Grid.Column="1"
                    Padding="28,18,28,58">
                    <TextBlock
                        Style="{ThemeResource TitleTextBlockStyle}"
                        Text="Supporto"
                        TextWrapping="Wrap" />
                    <HyperlinkButton Click="HyperlinkButton_Click" Content="Contatta il supporto" />
                    <HyperlinkButton Click="HyperlinkButton_Click" Content="Invia un feedback" />
                    <HyperlinkButton Click="HyperlinkButton_Click_3" Content="La tua privacy" />
                    <HyperlinkButton Click="HyperlinkButton_Click_1" Content="Informazioni sull'app" />
                </StackPanel>
                <!--#endregion-->

                <!--#region Windows Hello-->
                <StackPanel
                    x:Name="WindowsHelloStackPanel"
                    Grid.Row="1"
                    Grid.Column="0"
                    Padding="0,28,0,0">
                    <TextBlock
                        Style="{ThemeResource TitleTextBlockStyle}"
                        Text="Windows Hello"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,8,0,0"
                        Style="{ThemeResource BodyTextBlockStyle}"
                        Text="Windows Hello è un nuovo sistema per eseguire l'accesso a dispositivi, app, servizi online e reti in modo sicuro. Abilitando l'autenticazione con Windows Hello l'app richiederà lo sblocco tramite PIN, impronta digitale o scansione dell'iride per eseguire l'accesso, in questo modo è possibile fornisce una maggiore protezione da accessi non autorizzati al tuo account iliad."
                        TextWrapping="Wrap" />
                    <HyperlinkButton NavigateUri="https://support.microsoft.com/it-it/help/17215">
                        <TextBlock Foreground="{ThemeResource SystemControlForegroundAccentBrush}" TextWrapping="Wrap">
                            <Underline>
                                <Run Text="Scopri di più sul funzionamento di Windows Hello e sui dispositivi compatibili" />
                            </Underline>
                        </TextBlock>
                    </HyperlinkButton>
                    <CheckBox
                        x:Name="WindowsHelloCheckBox"
                        Click="CheckBox_Click"
                        Content="Usa Windows Hello" />
